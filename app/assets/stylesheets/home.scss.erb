#container-skippr {
	width:600px;
  	height: 300px;
  	transition: 1.0s ;
}

.top-title {
	font-size:21px;
	font-family: 'Sawarabi Gothic','Arial', 'メイリオ';
	color: rgba(255,165,0,1);
}

.image1 {
	background-image: image-url("<%= asset_path('image_4.jpg') %>");
}

.image2 {
	background-image: image-url("<%= asset_path('image_6.jpg') %>");
}

.image3 {
	background-image: image-url("<%= asset_path('image_7.jpg') %>");
}

.image4 {
	background-image: image-url("<%= asset_path('image_10.jpg') %>");
}

.image5 {
	background-image: image-url("<%= asset_path('image_11.jpg') %>");
}

.top-text {
	font-size:21px;
	font-family: 'Sawarabi Gothic','Arial', 'メイリオ';
}

.top-search {
	margin-top:10px;
	margin-bottom:10px;
}

.top-image {
	width:300px;
	height:200px;
}

//abouyのscss
.about-right {
	width:100%;
	height:300px;
	background-image: blue;
	font-family: 'Sawarabi Gothic','Arial', 'メイリオ';
}

.about-left {
	width:100%;
	height:350px;
	background-image: image-url("<%= asset_path('image_about.jpg') %>");
}

.about-title {
	font-family: 'Comic Sans MS';
	color:rgb(0,0,205);
}

.about-text {
	font-size:17px;
}

@media screen and (max-width:800px) {
#container-skippr {
	width:450px;
  	height:225px;
  	transition: 1.0s ;
}
}

@media screen and (max-width:430px) {
#container-skippr {
	width:300px;
  	height:200px;
  	transition: 1.0s ;
}

.top-image {
	width:300px;
	height:200px;
}
}
