<!DOCTYPE html>
<html>
    <head>
        <title>chibacity_walk</title>
            <%= csrf_meta_tags %>
            <%= csp_meta_tag %>
            <meta name="viewport" content="width=device-width,initial-scale=1.0">
            <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
            <%= stylesheet_link_tag    'application', media: 'all' %>
            <!--, 'data-turbolinks-track': 'reload'を削除-->
            <%= javascript_include_tag 'application', data: {"turbolinks" => false} %>
    </head>
    <body>
    
    <header class="containerr-fluid header ">
        <div class="row">
            <div class="col-7 offset-1">
                <span class="logo">chibacitywalk<span class="fas fa-walking " style = "color: rgb(255,165,0);"></span></span>
            </div>
            <div class="col-4 float-right">
                <% if user_signed_in? %>
                    <p class="wellcome-text">ようこそ、<%= current_user.name %> さん！</p>
                <% end %>
            </div>
        </div>
    </header>
        <nav class="nav navbar sticky-top">
            <div class="container justify-content-center">
                <% if user_signed_in? %>
                        <li><%=link_to 'top',root_path, class: 'nav-item ' %></li>
                        <li><%=link_to 'about',home_about_path, class: 'nav-item' %></li>
                        <li><%=  link_to 'マイページ',user_path(current_user), class: 'nav-item'%></li>
                        <li><%=link_to  'お気に入り', user_bookmarks_path(current_user), class: 'nav-item' %></li>
                        <li><%=  link_to '投稿一覧',postarticles_path, class: 'nav-item'%></li>
                        <li><%= link_to 'logout', destroy_user_session_path, method: :delete, class: 'nav-item' %></li>
                <% else %>
                        <li><%=link_to 'top',root_path, class: 'nav-item' %></li>
                        <li><%=link_to 'about',home_about_path, class: 'nav-item' %></li>
                        <li><%= link_to '新規登録', new_user_registration_path, class: 'nav-item' %></li>
                        <li><%= link_to 'ログイン', new_user_session_path, class: 'nav-item' %></li>
                <% end %>
            </div>
        </nav>
    <div class="container">
        <p id="notice"><%= notice %></p> <!--デバイスでnotice設定されているので呼び出してるだけ-->
      <%= yield %>
    </div>

    <div id="footer">
    <footer class="container-fluid bg-4 text-center">
        <div class="row text-center">
            <div class="col-md-6">
                <div class="social">
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                </div>
            </div>
            <div class="col-12">
                <hr class="light">
                <h5>@CopyRight chibacity_walk.inc</h5>
            </div>
        </div>
    </footer>
    </div>

    </body>
</html>

