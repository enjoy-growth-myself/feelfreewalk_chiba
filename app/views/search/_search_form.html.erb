<%= form_with url: search_path, method: :get, local: true do |form| %>
	<div class="search-text">
		記事のタイトルもしくは、<br>
		位置情報(住所や施設名)で検索できます！！
	</div>
	<div class="d-flex">
		<div>
			<%= form.select :keyword,[["タイトル","title"],["位置情報","address"]],{},{class: "form-control"} %>
		</div>
		<div>
			<%= form.text_field :searchword,class: 'form-control' %>
		</div>
		<div>
			<%= button_tag '<i class="fa fa-search"></i>'.html_safe, :type => "submit", :class =>"btn btn-primary" %>
		</div>
	</div>
<% end %>
