<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1 col-xs-offset-1">
			<h2>新着記事一覧</h2>
			<% @postarticles.each do |article| %>
			<div class="col-xs-12 col-md-6 col-lg-3">
				<div class="index_box">
					<% article.postarticle_images.first(1).each do |image| %>

						<p class="index_title">
							<%= attachment_image_tag image, :image, size: "200x200", fallback: "no_image.jpg"%></p>
					<% end %>
					<%= link_to article.title, postarticle_path(article), class: "index_title" %>
					<p>投稿日:<%= article.created_at.strftime('%Y/%m/%d') %></p>
				</div>
			</div>
			<% end %>
		<div class="col-xs-2"></div>
	</div>
</div>