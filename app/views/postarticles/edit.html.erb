<div class="container">
    <div class="row">
        <h2 class="col-6 offset-3 edit_title">投稿内容の編集</h2>
    </div>
		<%= form_with(model: @postarticle, local: true) do |form| %>
		<div class="row">
        	<div class="col-6 offset-3 edit_field ">
		        <p class="edit_text"><%= form.label :title %></p>
		        <%= form.text_field :title, class: 'form-control' %>
	    	</div>
	        <div class="col-6 offset-3 edit_field">
		         <p class="edit_text" rows=""><%= form.label :body %></p>
		        <%= form.text_area :body, class: "form-control input-lg" , size: "20x20"%>
		    </div>

		    <div class="col-6 offset-3 edit_field">
		        <p class="edit_text"><%= form.label :address %></p>
		        <%= form.text_field :address, class: 'form-control' %>
	    	</div>

	    	<div class="col-6 offset-3 edit_field">
		      	<h4>subumitボタン確認</h4>
		      	<%= link_to "詳細画面に戻る", postarticle_path, class: "btn btn-info" %>
		        <%= form.submit "更新", class: "btn btn-primary " %>
	   		</div>
    	<% end %>
    </div>
</div>

