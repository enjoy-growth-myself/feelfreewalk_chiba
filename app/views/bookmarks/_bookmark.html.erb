
<% if postarticle.bookmark_by?(current_user) %>
	<%= link_to postarticle_bookmark_path(postarticle),method: :delete do %>
	<i class="glyphicon glyphicon-heart" aria-hidden="true" style = "color: red;"></i>
	<%= postarticle.bookmark.count %> お気に入りを外す
	<% end %>
<% else %>
	<%= link_to postarticle_bookmark_path(postarticle), method: :post do%>
	<i class="glyphicon glyphicon-heart" aria-hidden="true"  style = "color: black;"></i>
	お気に入りに追加
	<% end %>
<% end %>