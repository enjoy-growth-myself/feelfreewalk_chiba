<h2>ユーザー詳細</h2>
<div class="container">
	<div class="row">
		<div class="col-xs-3">
		 	<div class = "profile_image">
				<%= attachment_image_tag @user, :profile_image, size: "100x100", class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
			</div>

			<table class="table .thead-light">
				<tr>
					<th>name</th>
					<th><%= @user.name %></th>
				</tr>

				<tr>
					<th>introduction</th>
					<th><%= @user.introduction %></th>
				</tr>
			</table>

			<% if @user == current_user %>
				<tr>
			        <%= link_to '',edit_user_path(@user), class:"btn btn-default btn-lg btn-block glyphicon glyphicon-wrench" %>
			    </tr>
			<% end %>
		</div>

		<div>
			<%= link_to '新規投稿', new_postarticle_path %>
		</div>
		<div class="col-xs-9">
		<h2>投稿記事一覧</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>タイトル</th>
					<th>本文</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @postarticles.each do |article| %>
				<tr>
					<td><%= article.title %></td>
					<td><%= article.body %></td>
					<td><%= link_to "詳細画面", postarticle_path(article), class: "" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<!--books一覧 -->

	</div>
	</div>
</div>
