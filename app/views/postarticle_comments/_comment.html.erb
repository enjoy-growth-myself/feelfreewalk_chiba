<tr>
	<th>user</th>
	<th>comment</th>
</tr>
	<% @postarticle.postarticle_comments.each do |postarticle_comment| %>
<tr>
	<td><%= link_to postarticle_comment.user.name, user_path(postarticle_comment.user) %>
	</td>
	<td><%= postarticle_comment.comment %></td>
	<td><%= postarticle_comment.score %></td>
		<% if  postarticle_comment.user_id == current_user.id %>
	<td><%= link_to "削除",postarticle_postarticle_comment_path(@postarticle, postarticle_comment), method: :delete, remote: true , data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger " %></td>
		<% end %>
	<% end %>
</tr>